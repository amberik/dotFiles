alias df='df -h'
alias vim='nvim'
alias ssh='ssh_int'
ssh_int()
{
    if ! [ $# -gt 1 ]
    then
        VARS=""
        # Add to array more VARS which should be passed to ssh session
        VARS_TO_PASS=(KONSOLE_PROFILE_NAME)
        for VAR_TO_PASS in ${VARS_TO_PASS} 
        do
            if ! [ "${(P)VAR_TO_PASS}" = "" ]
            then
                VARS+="$VAR_TO_PASS=${(P)VAR_TO_PASS} "
            fi
        done
        command ssh -t $1 $VARS "\$(echo \$0)"
    else
        command ssh $@
    fi
}

# Use modern completion system                                                                        
autoload -Uz compinit                                                                                 

# Key maping:
# Help:
#   type bindkey in zsh shell and you'll see list of bound 
#   keys.
bindkey "^[l" forward-char
bindkey "^[j" backward-char
bindkey "^[i" up-line-or-search
bindkey "^[k" down-line-or-search
bindkey "^[L" forward-word
bindkey "^[J" backward-word
bindkey "^[f" delete-char
bindkey "^[d" backward-delete-char                                                           

